@model CreateProduct

<div class="mt-4 container">
    <div class="jumbotron">
        <h1>Coffee Shop Admin Panel</h1>
        <div class="mt-4 d-flex justify-content-between">
            <a href="/Dashboard" class="btn btn-outline-info">Dashboard</a>
            <a href="/AddCategory" class="btn btn-outline-primary">Add Category</a>
            <a href="/Logout" class="btn btn-outline-danger btn-md">logout</a>
        </div> 
    </div>

    <div class="mt-5">
        <form asp-action="CreateProduct" enctype="multipart/form-data" method="post" class="">
            <div class="form-group col-3">
                <span asp-validation-for="ProductName"></span>
                <label asp-for="ProductName"></label>
                <input asp-for="ProductName" class="form-control">
            </div>
            <div class="form-group col-3">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control">
            </div>
            <div class="form-group col-3">
                <span asp-validation-for="UnitPrice"></span>
                <label asp-for="UnitPrice"></label>
                <input asp-for="UnitPrice" class="form-control">
            </div>
            <div class="form-group col-3">
            <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">
                    <option>---Select Option---</option>
                    @foreach(var cat in ViewBag.Category)
                    {
                    <option value="@cat.CategoryId">@cat.CategoryName</option>
                    }
                </select>
            </div>
            <div class="form-group col-4">
            <label asp-for="ImagePath"></label>
            <div class="col-sm-10 col-auto">
                <div class="custom-file">
                    <input asp-for="ImagePath" class="form-control custom-file-input">
                    <label class="custom-file-label">Choose file...</label>
                </div>
            </div>
        </div>
        <div class="form-group col-2">
            <input class="btn btn-success" type="submit" value="Add Product">
        </div>
            @section Scripts{
                <script>
                    $(document).ready(function() {
                        $('.custom-file-input').on("change", function(){
                            var filename = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(filename);
                        });
                    });
                </script>
            }
        </form>
    </div>
</div>